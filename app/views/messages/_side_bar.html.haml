%body
  .Side-bar
    .Side-bar__header
      .Side-bar__header--box
        %p.Side-bar__header--box--name
          = current_user.name
        %ul.Side-bar__header--box--icon
          %li.Side-bar__header--box--icon--edit
          = link_to new_group_path do
            = icon('fa', 'edit', class: "tag")
          %li.Side-bar__header--box--icon--cog
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: "tag")
    .Side-bar__group
      - current_user.groups.each do |group|
        .Side-bar__group--box
          = link_to group_messages_path(group), class: "link" do
            %p.message1
              = group.name
            %p.message2
              = group.show_last_message
